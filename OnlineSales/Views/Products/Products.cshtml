@section scripts{

        <script>
            var modelProducts = @Html.Raw(TempData["data"]);
            var modelQuantity = null;
        </script>
    <script src="~/Scripts/myScripts/TestDataScript.js"></script>
}
<h2>@TempData["Title"]</h2>
<br />
<div class="row">
    <div data-bind="foreach: products">
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img data-bind="attr:{src: imageUrl()}" width="242" height="200" />
                <div class="caption">
                    <h4><span data-bind="text: Name"></span></h4>
                    <!-- Trigger the modal with a button -->
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-info" data-toggle="modal" id="modalBtn" data-bind="click: $parent.selected">
                        Details
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content" data-bind="foreach: selection">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" data-bind="click: $parent.closeDetail">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <ul>
                    <img data-bind="attr:{src: imageUrl()}" width="350" height="300" class="img-rounded" />
                    <button class="btn btn-success" data-bind="click: $parent.addToCart"><p class="glyphicon glyphicon-shopping-cart"></p>Add to cart</button>
                    <li>
                        <h1 class="control-label" data-bind="text: Name"></h1>
                        <h2>$<span class="control-label" data-bind="text: Price"></span></h2>
                    </li>
                    <li>
                        <h4 data-bind="text: Description"></h4>
                    </li>
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info" data-dismiss="modal" data-bind="click: $parent.closeDetail">Close</button>
            </div>
        </div>
    </div>
</div>
